@model List<Feedback>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Feedback List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Feedback" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-patch-plus"></i> Create New Feedback
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Comment</th>
                <th>Rating</th>
                <th>Timestamp</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(f => f.Timestamp))
            {
                <tr>
                    <td>@obj.UserId</td>
                    <td>@obj.Comment</td>
                    <td>@obj.Rating</td>
                    <td>@obj.Timestamp.ToString("g")</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            
                            <a asp-controller="Feedback" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
