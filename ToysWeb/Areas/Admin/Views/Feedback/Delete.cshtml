@model Feedback

<div class="card-body p-4">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Feedback</h2>
            <hr />
        </div>
        <div class="mb-3">
            <h4>Are you sure you want to delete this feedback?</h4>
        </div>
        <div class="mb-3">
            <label>User ID</label>
            <input asp-for="UserId" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label>Comment</label>
            <textarea asp-for="Comment" class="form-control" readonly></textarea>
        </div>
        <div class="mb-3">
            <label>Rating</label>
            <input asp-for="Rating" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label>Timestamp</label>
            <input asp-for="Timestamp" class="form-control" readonly />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </form>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Feedback" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
