@model List<MessageRequest>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Message Request List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="MessageRequest" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-patch-plus"></i> Create New Message Request
            </a>
        </div>
    </div>

    <table class="table table-bordered table-stripped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Email</td>
                    <td>@obj.Subject</td>
                    <td>
                        <div class="w-75 btn group" role="group">
                            <a asp-controller="MessageRequest" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="MessageRequest" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
